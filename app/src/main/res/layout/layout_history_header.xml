<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeView"
    android:orientation="vertical"
    android:background="#a7afb0">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="74dp"
        android:background="@drawable/bg_historyheader">

        <ImageView
            android:layout_width="72dp"
            android:layout_height="60dp"
            android:id="@+id/iv_hero"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="24dp" />

        <ImageButton
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:id="@+id/ib_sword"
            android:background="@drawable/button_sword"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="12dp" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/tile_history"
        android:scaleType="fitStart" >


    </LinearLayout>

</LinearLayout>
